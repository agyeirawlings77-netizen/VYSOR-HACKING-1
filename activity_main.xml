<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#1A1A2E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“¡ SCREEN MIRROR SERVER"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#00FF00"
            android:layout_marginBottom="30dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:elevation="8dp"
            android:radius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="#16213E">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŒ Server Information"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#00FF00"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/tvIpAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Server: 192.168.1.100:5555"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:padding="12dp"
                    android:background="#0F3460"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status: Not Started"
                    android:textSize="15sp"
                    android:textColor="#E94560"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvClients"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connected Clients: 0"
                    android:textSize="15sp"
                    android:textColor="#00D9FF"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:elevation="8dp"
            android:radius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="#16213E">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš™ï¸ Server Controls"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#00FF00"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/btnStartServer"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="â–¶ START SERVER"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#00D100"
                    android:layout_marginBottom="12dp"/>

                <Button
                    android:id="@+id/btnStopServer"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="â¹ STOP SERVER"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#E94560"
                    android:layout_marginBottom="12dp"/>

                <Button
                    android:id="@+id/btnStartCapture"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="ðŸ“± START SCREEN CAPTURE"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#00D9FF"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:radius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="#16213E">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“‹ Instructions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#00FF00"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Click START SERVER\n2. Click START SCREEN CAPTURE\n3. Allow screen recording permission\n4. Open Monitor App on another device\n5. Enter this IP address: 192.168.1.100:5555\n6. Click CONNECT to view screen"
                    android:textSize="14sp"
                    android:textColor="#CCCCCC"
                    android:lineSpacingExtra="4dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
