<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <!-- Button styles -->
    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="ConnectButton" parent="PrimaryButton">
        <item name="android:backgroundTint">@color/green</item>
    </style>
    
    <style name="DisconnectButton" parent="PrimaryButton">
        <item name="android:backgroundTint">@color/red</item>
    </style>
    
    <!-- TextView styles -->
    <style name="HeaderText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>
    
    <style name="StatusText">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="LabelText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="InfoText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>
    
    <!-- Card style -->
    <style name="CardView">
        <item name="android:background">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    
    <!-- Permission status styles -->
    <style name="PermissionStatus">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="PermissionGranted" parent="PermissionStatus">
        <item name="android:background">@color/green</item>
    </style>
    
    <style name="PermissionDenied" parent="PermissionStatus">
        <item name="android:background">@color/red</item>
    </style>
    
    <style name="PermissionWarning" parent="PermissionStatus">
        <item name="android:background">@color/orange</item>
    </style>
</resources>